    <script>
        const places = [
            {
                name: "Boracay",
                description: "Famous for its white-sand beaches and vibrant nightlife.",
                image: "D:/Files/Documents/abby website/yme html pics/tress.jpg",
                link: "boracay.html"
            },
            {
                name: "Palawan",
                description: "Known for its stunning landscapes, limestone cliffs, and clear waters.",
                image: "D:/Files/Documents/abby website/yme html pics/Palawan.jpg",
                link: "palawan.html"
            },
            {
                name: "Cebu",
                description: "A historical city with beautiful beaches and rich culture.",
                image: "D:/Files/Documents/abby website/yme html pics/CBwater.jpg",
                link: "cebu.html"
            },
            {
                name: "Siargao",
                description: "Surfing capital of the Philippines, known for Cloud 9.",
                image: "D:/Files/Documents/abby website/yme html pics/SiargaF.jpg",
                link: "siargao.html"
            },
            {
                name: "Batanes",
                description: "is renowned for its stunning landscapes, rich cultural heritage, and unique charm.",
                image: "D:/Files/Documents/abby website/yme html pics/BatanesE.jpg",
                link: "Batanes.html"
            }
        ];

        const placesContainer = document.getElementById('places');

        places.forEach(place => {
            const placeDiv = document.createElement('div');
            placeDiv.classList.add('place');
            
            placeDiv.onclick = () => {
                window.location.href = place.link; // Navigate to the specific page
            };
            
            placeDiv.innerHTML = `
               <h2>${place.name}</h2>
               <img src="${place.image}" alt="${place.name}">
               <p>${place.description}</p>
           `;
            
           placesContainer.appendChild(placeDiv);
       });
    </script>
